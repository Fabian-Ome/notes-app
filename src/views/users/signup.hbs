<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Account Register
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group mb-3">
            <input type="text" class="form-control" name="name" placeholder="name" value="{{name}}">
          </div>
          <div class="form-group mb-3">
            <input type="email" class="form-control" name="email" placeholder="email" value="{{email}}">
          </div>
          <div class="form-group mb-3">
            <input type="password" class="form-control" name="password" placeholder="password" value="{{password}}">
          </div>
          <div class="form-group mb-3">
            <input type="password" class="form-control" name="confirm_password" placeholder="password"
              value="{{confirm_password}}">
          </div>
          <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary col-12">
              SignUp
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>