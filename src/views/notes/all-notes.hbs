<div class="row">
  {{#each notes}}
  <div class="col-md-3 mb-5">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{description}}</p>
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button class="btn btn-danger col-12 btn-sm" type="submit">
            Delete
          </button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto custom">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p class="lead">there are not notes yet.</p>
      <a href="/notes/add" class="btn btn-success col-12">create one!</a>
    </div>
  </div>
  {{/each}}
</div>